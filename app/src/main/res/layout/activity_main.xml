<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.babajisoft.sample.MainActivity">
<RelativeLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:id="@+id/relativeLayout"
    app:layout_constraintLeft_toLeftOf="@+id/activity_main"
    tools:layout_constraintLeft_creator="1"
    app:layout_constraintTop_toTopOf="@+id/activity_main"
    android:layout_marginTop="16dp"
    tools:layout_constraintTop_creator="1"
    app:layout_constraintRight_toRightOf="@+id/activity_main"
    tools:layout_constraintRight_creator="1"
    app:layout_constraintBottom_toBottomOf="@+id/activity_main"
    android:layout_marginBottom="16dp"
    tools:layout_constraintBottom_creator="1"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintVertical_bias="1.0">


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Hello World!"
        android:id="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/relativeLayout"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/relativeLayout"
        tools:layout_constraintRight_creator="1" />

    <RadioButton
        android:text="RadioButton"
        android:layout_width="112dp"
        android:layout_height="36dp"
        android:id="@+id/radioButton"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/toggleButton"
        tools:layout_constraintBaseline_creator="1" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:id="@+id/progressBar"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/seekBar"
        tools:layout_constraintBottom_creator="1" />

    <CheckBox
        android:text="CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/textView"
        tools:layout_constraintTop_creator="1" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:id="@+id/spinner"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textView"
        tools:layout_constraintRight_creator="1" />

    <SeekBar
        android:layout_width="352dp"
        android:layout_height="25dp"
        android:id="@+id/seekBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        android:layout_marginBottom="39dp"
        tools:layout_constraintBottom_creator="1" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton"
        android:layout_above="@+id/seekBar"
        android:layout_centerHorizontal="true"
        app:layout_constraintLeft_toRightOf="@+id/checkBox"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/seekBar"
        android:layout_marginBottom="47dp"
        tools:layout_constraintBottom_creator="1" />

</RelativeLayout>


</android.support.constraint.ConstraintLayout>
