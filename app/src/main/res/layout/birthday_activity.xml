<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorVoting"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Birthday"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:drawableLeft="@drawable/birthday_30blk"
        android:drawablePadding="5dp"
        android:textColor="@color/black"
        android:textStyle="normal|bold"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        />
</RelativeLayout>

    <TextView
        android:text="No one has birthday today.."
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textView6"
        android:visibility="gone" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/bdaylistView"
        android:listSelector="#8bc34a"
        android:layout_height="match_parent"

        />

</LinearLayout>